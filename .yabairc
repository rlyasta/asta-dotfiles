## Asta's Yabai Config ##

# Adapted from: https://github.com/Livakivi/config-files

## Loading Configuration ##
sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
yabai -m config layout bsp

# Set "bsp" to "float" to disable tiling

## Behaviour and Appearance ##
yabai -m config 							\
	window_shadow float		 				\
	window_animation_duration 0.2			\
	window_animation_easing ease_out_circ  	\
	insert_feedback_color 0xfff7821b	 	\
											\
	top_padding 2							\
	bottom_padding 2						\
	left_padding 2							\
	right_padding 2							\
	mouse_action1 move					
yabai -m config window_gap 2									
